---
import Arrow from "./Icons/Arrow.astro";
---

<form class="relative inline-block pb-[185px] newsletter">
  <input
    type="email"
    placeholder="YOUR EMAIL"
    class="text-white text-2xl rounded-full border-[3px] border-white px-8 h-[68px] bg-black w-[500px] pr-14"
  />
  <button class="absolute right-5 top-4 text-white hover:text-springBud hover:right-4 transition-all duration-200 ease-in-out"
    ><Arrow /></button
  >
  <div
    class="register circle uppercase absolute -right-[240px] -top-[56px] rotate-[10deg] text-[32px] leading-none pointer-events-none"
  >
    Register<br />for Free
  </div>
</form>