---
import Arrow from "./Icons/Arrow.astro";
---

<form
  class="inline-block relative pb-[185px] newsletter kwes-form"
  action="https://kwesforms.com/api/foreign/forms/toyYcLrR9215nenXgNOe"
  method="POST"
>
  <div class="relative w-[500px]">
    <input
      type="email"
      placeholder="YOUR EMAIL"
      class="text-white text-2xl rounded-full border-[3px] border-white px-8 h-[68px] bg-black w-full pr-14"
      name="email"
      data-kw-rules="required|email"
    />
    <button
      class="absolute right-5 top-4 text-white hover:text-springBud hover:right-4 transition-all duration-200 ease-in-out"
      type="submit"
    >
      <Arrow />
    </button>
  </div>
  <div
    class="register circle uppercase absolute -right-[240px] -top-[56px] rotate-[10deg] text-[32px] leading-none pointer-events-none"
  >
    Register
    <br />
    for Free
  </div>
</form>
