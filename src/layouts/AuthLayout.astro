---
import BaseLayout from "./BaseLayout.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props.frontmatter || Astro.props;
---

<BaseLayout title={title}>
  <div class="bg-no-repeat bg-arrowAuth">
    <div class="page-grid">
      <aside class="p-8 fixed">
        <a href="/"
          ><img src="/images/logo.svg" alt="Two Week Build Challenge" /></a
        >
      </aside>
      <main class="col-start-5 col-span-4 pt-[200px]">
        <h1
          class="text-springBud text-8xl font-mono leading-[0.9] tracking-tight mb-8"
        >
          {title}
        </h1>
        <div class="content"><slot /></div>
      </main>
    </div>
    <Footer />
  </div>
</BaseLayout>
